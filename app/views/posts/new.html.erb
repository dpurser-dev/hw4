<div class="container px-4">

  <div class="row">
    <div class="col">
      <h1>New Post</h1>
    </div>
  </div>

  <div class="row">
    <div class="col"> 
      <%= form_with :model => @post do |form| %>
        <p>
          <%= form.label "title" %>
          <%= form.text_field "title" %>
          <%= form.label "description" %>
          <%= form.text_field "description" %>
          <%= form.label "posted_on" %>
          <%= form.date_field "posted_on" %>
          <%= form.submit %>
        </p>
          <%= form.hidden_field "place_id" %>
      <% end %>
    </div>
  </div>

</div>