<div class="container">

  <div class="row">
    <div class="col">
      <div class="p-3 bg-white">
        <h1>New Post</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="p-3 bg-white">
        <img width="100px" src="../015-add-black.png">
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col"> 
      <div class="p-3 bg-white">
        <%= form_with :model => @post do |form| %>
            <p>
            <%= form.label "title", class: "form-label" %>
            <%= form.text_field "title", class: "form-control" %>
            <%= form.label "description", class: "form-label" %>
            <%= form.text_field "description", class: "form-control" %>
            <%= form.label "posted_on", class: "form-label" %>
            <%= form.date_field "posted_on", class: "form-control" %>
            <%= form.label "uploaded_image", class: "form-label" %>
            <%= form.file_field "uploaded_image", class: "form-control" %>
            <%= form.submit "Post", :class => "btn btn-primary"  %>
            <%= form.hidden_field "place_id" %>
            </p>
        <% end %>
      </div>
    </div>
  </div>

</div>