<div class="container">
  <div class="row gy-5">
    <div class="col-6">
      <h1>Places</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row gy-5">
    <% if @places %>   
        <% for place in @places %>
          <div class="col">
            <div class="p-3 border bg-light">
              <a href="/places/<%= place["id"] %>"><img class="place-img" width="100px" src="025-journal-black.png"></a><a class="place-link" href="/places/<%= place["id"] %>"><%= place["name"] %></a>
            </div>
          </div>
        <% end %>
        <div class="col">
          <div class="p-3 border bg-light">
            <a href="/places/new"><img class="place-img" width="100px" src="009-book-black.png"></a><a class="place-link" href="/places/new">New place</a>
          </div>
        </div> 
    <% else %>
      <div class="col">
        <div class="p-3 border bg-light">
          Please <a href="/login">login</a> or <a href="/users/new">sign up</a>
        </div>
      </div>
    <% end %>
</div>