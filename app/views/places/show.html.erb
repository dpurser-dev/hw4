<div class="container">

  <div class="row gy-5">
    <div class="col-6">
      <h1><%= @place["name"] %></h1>
      <h2>My Posts</h2>
    </div>
  </div>
  
  <div class="places">
  <div class="row gy-5">
    <% if @posts%>
      <% for post in @posts %>
        <div class="col">
          <div class="p-3 border bg-light">
            <% if post.uploaded_image.attached? %>
              <img width="100px" src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
            <% else %>
              <img width="100px" src="../018-text book-black.png">
            <% end %>
            <h3><%= post["title"] %></h3>
            <h4><%= post["posted_on"] %></h4>
            <p><%= post["description"] %></p>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="col">
      <div class="p-3 border bg-light">
        <a href="/posts/new?place_id=<%= @place["id"] %>">
          <img width="100px" src="../015-add-black.png">
          New Post
        </a>
      </div>
    </div>
  </div>
  </div>
  
  <div class="row gy-5">
    <div class="col">
      <a href="/places">Back to All Places</a>
    </div>
  </div>


</div>